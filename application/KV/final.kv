<ContentNavigationDrawer>
    orientation: "vertical"
    padding: "5dp"
    spacing: "20dp"
    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height
        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "nlp.png"

    MDLabel:
        text: "LEE"
        font_style: "Button"
        adaptive_height: True

    MDLabel:
        text: "navy10021@snu.ac.kr"
        font_style: "Caption"
        adaptive_height: True
    
    ScrollView:
        MDList:

            OneLineIconListItem:
                text: "Notice"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.manager.current = "notice"
                IconLeftWidget:
                    icon: "alarm-light"

            OneLineIconListItem:
                text: "About Data"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.manager.current = "about_data"
                IconLeftWidget:
                    icon: "database-cog"

            OneLineIconListItem:
                text: "About Models"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.manager.current = "about_model"
                IconLeftWidget:
                    icon: "desktop-mac-dashboard"
                    
            OneLineIconListItem:
                text: "About Us"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.manager.current = "about_us"
                IconLeftWidget:
                    icon: "account-multiple"

            OneLineIconListItem:
                text: "OUT"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.manager.current = "out"
                IconLeftWidget:
                    icon: "location-exit"

MDScreen:
    name: "final"
    MDFloatLayout:
        md_bg_color: rgba(50, 100, 160, 255)
        orientation: "vertical"

        MDLabel:
            text: "Good Luck"
            font_name: "Anton"
            font_size: "70sp"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .5}
            color: 1, 1, 1, 1
            line_height: 1.1

        Button:
            text: "Re-PLAY"
            font_name: "Anton"
            font_size: "55sp"
            size_hint:  .5, .12
            pos_hint: {"center_x": .5, "center_y": .25}
            background_color: 1, 1, 1, 0
            on_release:
                root.manager.current = "start"

            canvas.before:
                Color:
                    rgba: 30/255, 60/255, 90/255, 0.4
                
                RoundedRectangle:
                    size: self.size
                    pos: self.pos      
                    radius: [10]

        MDBottomAppBar:
            md_bg_color: 1, 1, 1, 0.09
            MDTopAppBar:
                id: toolbar
                icon: "chart-areaspline"
                icon_color: rgba(50, 100, 160, 255)
                title: "About AI models"
                type: "bottom"
                mode: "end"
                elevation: 10
                left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
    
        MDNavigationLayout:
            x: toolbar.height
        
            MDScreenManager:
                id: manager
                MDScreen:
                    name: "out"
                    MDFloatLayout:
                        MDLabel:
                            text: ""
                            halign: "left"
                            line_height: 1.5

                MDScreen:
                    name: "notice"
                    MDFloatLayout:
                        MDLabel:
                            text: "   Notice"
                            color: rgba(251, 187, 29, 255)
                            font_name: "Anton"
                            font_size: "30sp"
                            halign: "left"
                            pos_hint: {"center_x": .5, "center_y": .9}
                            line_height: 1.5

                        MDLabel:
                            text: " This application is a predictive model based on research, and we do not take any responsibility for the results of your decision making."
                            color: 0.8, 0.8, 0.8, 1
                            size_hint:  .95, .6
                            font_name: "Ubuntu"
                            font_size: "15sp"
                            halign: "left"
                            pos_hint: {"center_x": .5, "center_y": .78}
                            line_height: 1.5

                MDScreen:
                    name: "about_data"
                    MDFloatLayout:
                        MDLabel:
                            text: "   We got"
                            color: 0.8, 0.8, 0.8, 1
                            font_name: "Anton"
                            font_size: "30sp"
                            halign: "left"
                            pos_hint: {"center_x": .5, "center_y": .9}
                            line_height: 1.5

                        MDLabel:
                            text: " Dataset from Ministry of Trade, Industry and Energy and Korean Statistical Information Service"
                            color: 0.8, 0.8, 0.8, 1
                            size_hint:  .95, .6
                            font_name: "Ubuntu"
                            font_size: "15sp"
                            halign: "left"
                            pos_hint: {"center_x": .5, "center_y": .78}
                            line_height: 1.5

                MDScreen:
                    name: "about_model"
                    MDFloatLayout:
                        MDLabel:
                            text: "   We desgin"
                            color: 0.8, 0.8, 0.8, 1
                            font_name: "Anton"
                            font_size: "30sp"
                            halign: "left"
                            pos_hint: {"center_x": .5, "center_y": .9}
                            line_height: 1.5

                        MDLabel:
                            text: " Machine Learning(Linear Regression, SVM), Ensenble(AdaBoost, ExtraTrees, XGBoost, LightGBM), Deep Learning(MLP, Vanilla RNN, LSTM, GRU), and Transformer-based models for stock prices training and prediction. Detailed code and visualization can be found on our github : github.com/Navy10021/Stock-AI\n"
                            color: 0.8, 0.8, 0.8, 1
                            size_hint:  .95, .6
                            font_name: "Ubuntu"
                            font_size: "15sp"
                            halign: "left"
                            pos_hint: {"center_x": .5, "center_y": .7}
                            line_height: 1.5
                    
                MDScreen:
                    name: "about_us"
                    MDFloatLayout:
                        MDLabel:
                            text: "   We are"
                            color: 0.8, 0.8, 0.8, 1
                            font_name: "Anton"
                            font_size: "30sp"
                            halign: "left"
                            pos_hint: {"center_x": .5, "center_y": .9}
                            line_height: 1.5

                        MDLabel:
                            text: "\n        Data Scientists.\n        Information Analysts.\n        MS. in Data Science, Seoul National University.\n        In Ambient Natural Language Processing Lab.\n"
                            color: 0.8, 0.8, 0.8, 1
                            font_name: "Ubuntu"
                            font_size: "15sp"
                            halign: "left"
                            pos_hint: {"center_x": .5, "center_y": .75}
                            line_height: 1.5


            MDNavigationDrawer:
                id: nav_drawer
                ContentNavigationDrawer:
                    manager: manager
                    nav_drawer: nav_drawer            
